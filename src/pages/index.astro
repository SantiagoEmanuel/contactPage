---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col items-center gap-[75px] mb-14 mt-4">
    <header
      class="w-[600px] max-[1100px]:w-[400px] text-center flex flex-col gap-3"
    >
      <h1 class="font-bold text-[4rem] max-[1100px]:text-[2.8rem] font-Be">
        Interested in our business pricing?
      </h1>
      <h3 class="text-[2rem] max-[1100px]:text-base font-Be">
        Fill out the form to view details and weâ€™ll contact you as soon as
        possible.
      </h3>
    </header>

    <form
      class="w-[900px] max-[905px]:w-[600px] bg-[#F8FAFC] bg-opacity-25 rounded-2xl p-8 flex flex-col gap-6"
    >
      <div class="flex flex-col gap-6">
        <div
          class="flex gap-[2rem] max-[905px]:gap-4 items-center justify-center max-[905px]:flex-col"
        >
          <div class="flex flex-col">
            <label for="name" class="text-sm font-Be">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Ethan Johnson"
              class="placeholder-[#CDD5E0] w-[400px] max-[905px]:w-[535px] font-Be"
            />
          </div>
          <div class="flex flex-col">
            <label for="email" class="text-sm font-Be">Company Email</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="ethan@johnson.com"
              class="placeholder-[#CDD5E0] w-[400px] max-[905px]:w-[535px] font-Be"
            />
          </div>
        </div>
        <div
          class="flex gap-[2rem] max-[905px]:gap-4 items-center justify-center max-[905px]:flex-col"
        >
          <div class="flex flex-col">
            <label for="company-size" class="text-sm font-Be"
              >Company Size</label
            >
            <select
              id="company-size"
              class="w-[400px] max-[905px]:w-[535px] text-black font-bold font-Be"
            >
              <option value="50-100-employees">50-100 employees</option>
              <option value="101-150-employees">101-150 employees</option>
              <option value="151-200-employees">151-200 employees</option>
            </select>
          </div>
          <div class="flex flex-col">
            <label for="subject" class="text-sm font-Be">Subject</label>
            <select
              name="subject"
              id="subject"
              class="w-[400px] max-[905px]:w-[535px] text-black font-bold font-Be"
            >
              <option value="building-landing-pages"
                >Building Landing pages</option
              >
              <option value="frontend">Frontend</option>
              <option value="backend">Backend</option>
            </select>
          </div>
        </div>
      </div>
      <div>
        <label for="message" class="text-sm font-Be">Message</label>
        <textarea
          name="message"
          id="message"
          cols="30"
          rows="10"
          class="w-full rounded-xl font-Be text-black font-bold p-5"
          >50-100 employees</textarea
        >
      </div>
      <button
        type="submit"
        class="bg-white text-[#4036A9] p-5 rounded-xl text-xl font-[800] font-Be"
        >Contact Sales</button
      >
    </form>
  </main>
</Layout>

<style>
  input,
  select {
    padding: 20px 15px;
    border-radius: 6px;
    color: black;
    font-weight: bold;
    outline: none;
  }
  textarea {
    outline: none;
  }
</style>
